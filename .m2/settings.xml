<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">


    <mirrors>
        <mirror>
            <mirrorOf>central</mirrorOf>
            <name>artifactory</name>
            <url>https://cruglobal.jfrog.io/cruglobal/maven-all</url>
            <id>central</id>
        </mirror>

        <mirror>
            <mirrorOf>snapshots</mirrorOf>
            <name>artifactory</name>
            <url>https://cruglobal.jfrog.io/cruglobal/maven-all</url>
            <id>snapshots</id>
        </mirror>

        <mirror>
            <mirrorOf>nexus-aem</mirrorOf>
            <name>nexus</name>
            <url>http://devtools.aws.cru.org/nexus/content/groups/cru-aem-repository-group/</url>
            <id>nexus-aem</id>
        </mirror>

        <mirror>
            <mirrorOf>central</mirrorOf>
            <name>maven-central</name>
            <url>https://repo1.maven.org/maven2/</url>
            <id>maven-central</id>
        </mirror>
    </mirrors>

    <servers>
        <server>
            <username>${env.AEM_CLOUD_ARTIFACTORY_USER}</username>
            <password>${env.AEM_CLOUD_ARTIFACTORY_API_KEY}</password>
            <id>central</id>
        </server>
        <server>
            <username>${env.AEM_CLOUD_ARTIFACTORY_USER}</username>
            <password>${env.AEM_CLOUD_ARTIFACTORY_API_KEY}</password>
            <id>snapshots</id>
        </server>
    </servers>

    <profiles>
        <profile>
            <id>artifactory</id>
            <repositories>
                <repository>
                    <id>central</id>
                    <name>maven-all</name>
                    <url>https://cruglobal.jfrog.io/cruglobal/maven-all</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>snapshots</id>
                    <name>maven-all-all</name>
                    <url>https://cruglobal.jfrog.io/cruglobal/maven-all</url>
                    <snapshots />
                </repository>
                <repository>
                    <id>maven-c</id>
                    <name>maven-c</name>
                    <url>https://repo1.maven.org/maven2/</url>
                    <snapshots />
                </repository>
                <repository>
                    <id>maven-fr</id>
                    <name>maven-fr</name>
                    <url>http://maven.in2p3.fr/</url>
                    <snapshots />
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>central</id>
                    <name>maven-all-all</name>
                    <url>https://cruglobal.jfrog.io/cruglobal/maven-all</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
                <pluginRepository>
                    <id>snapshots</id>
                    <name>maven-all-all</name>
                    <url>https://cruglobal.jfrog.io/cruglobal/maven-all</url>
                    <snapshots />
                </pluginRepository>
            </pluginRepositories>
        </profile>

        <profile>
            <id>nexus</id>
            <repositories>
                <repository>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <id>nexus-aem</id>
                    <name>nexus-aem</name>
                    <url>http://devtools.aws.cru.org/nexus/content/groups/cru-aem-repository-group/</url>
                </repository>
            </repositories>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>nexus</activeProfile>
        <activeProfile>artifactory</activeProfile>
    </activeProfiles>

    <pluginGroups>
        <pluginGroup>org.ccci</pluginGroup>
        <pluginGroup>org.mortbay.jetty</pluginGroup>
    </pluginGroups>

</settings>
